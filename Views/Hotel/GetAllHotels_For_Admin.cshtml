@model IEnumerable<Tourism_1.Models.Hotel>

@{
    ViewBag.Title = "GetAllHotels_For_Admin";
}

<h2>Hotels Request</h2>
@if (Model == null)
{
                <h2 style="font-size:100px;">No Request</h2>
}
else
{


<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HotelName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hotelrentperday)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HotelName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HotelType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HotelDesc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HotelAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hotelrentperday)
        </td>
        
        <td>
            @Html.ActionLink("Reject", "RejectHotel", new { id = item.HotelId }) |
            @Html.ActionLink("Approve", "ApproveHotel", new { id = item.HotelId }) |
            
        </td>
    </tr>
}

</table>
}
