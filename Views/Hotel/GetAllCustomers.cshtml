@model IEnumerable<Tourism_1.Models.User>

@{
    ViewBag.Title = "GetAllCustomers";
}
<div class="n-city">
    @if (Model == null)
    {
        <h3 class="customers">No customers for this hotel</h3>
    }
    else
    {
        <div class="n-city">

            <h2 class="places">All Customers</h2>

                <table class="table table-hover table-bordered tab-customers " style="background-color:white;border-radius:5px;">


                    <tr style="background-color:gray">

                        <th>
                            <label> Name</label>
                        </th>
                        <th>
                            <label> Email</label>
                        </th>
                        <th>
                            <label>Mobile Number</label>
                        </th>
                        <th>
                            <label>Date Of Birth</label>
                        </th>
                        <th>
                            <label>Address</label>
                        </th>
                        <th></th>

                    </tr>



                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserMobile)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BirthDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserAddress)
                            </td>

                        </tr>
                    }


                </table>
            
            
        </div>
    }
    </div>

