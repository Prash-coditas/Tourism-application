@model Tourism_1.Models.Account

@{
    ViewBag.Title = "Login";
}

@*<h2>Login</h2>*@

<body class="image">
    @*<img  class="small-image" src="~/Images/login-1.png"/>*@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal center">
        <h2 class="lagin">Login</h2>

        @Html.ValidationSummary(true, "", new { @class = "text-danger  validate" })
        <div class="form-group login-page">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2 labell" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control username " } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger dg " })
            </div>
        </div>

        <div class="form-group login-page">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 labell" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control username" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger dg " })
            </div>
        </div>

        <div class="form-group login-btn">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-danger btnn  btn-block" />
            </div>
        </div>
        <p class="Login">
            Don't have an account?
            <br />
            @Html.ActionLink("Register as a User", "Signup", "User")
            <br />

            @Html.ActionLink("Register for a Hotel", "HotelSignup", "User")

        </p>
    </div>
}
    </body>


