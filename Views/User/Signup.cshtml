@model Tourism_1.Models.User

@{
    ViewBag.Title = "Signup";
}


<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<body class="image">

    @using (Html.BeginForm("Signup", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal centerr">
        <h2 class="lagin">Signup</h2>
       
        <div class="form-group login-page">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2 labell1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control username1" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger dg " })
                @if (@ViewBag.RegisterError != null)
                {
                    <div style="color:white;margin-left:20px;">
                        <b>@ViewBag.RegisterName</b>
                    </div>
                }
            </div>
        </div>

        <div class="form-group login-page">
            @Html.LabelFor(model => model.UserEmail, htmlAttributes: new { @class = "control-label col-md-2 labell1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserEmail, new { htmlAttributes = new { @class = "form-control username2" } })
                @Html.ValidationMessageFor(model => model.UserEmail, "", new { @class = "text-danger dg2" })
                @if (@ViewBag.RegisterEmail != null)
                {
                    <div style="color:white;margin-left:20px;">
                        <b>@ViewBag.RegisterEmail</b>
                    </div>
                }
            </div>
        </div>

        <div class="form-group login-page">
            @Html.LabelFor(model => model.UserMobile, htmlAttributes: new { @class = "control-label col-md-2 labell1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserMobile, new { htmlAttributes = new { @class = "form-control username3" } })
                @Html.ValidationMessageFor(model => model.UserMobile, "", new { @class = "text-danger dg2" })
                @if (@ViewBag.RegisterMobile != null)
                {
                    <div style="color:white;margin-left:20px;">
                        <b>@ViewBag.RegisterMobile</b>
                    </div>
                }
            </div>
        </div>

        <div class="form-group login-page">
            @Html.LabelFor(model => model.BirthDate, htmlAttributes: new { @class = "control-label col-md-2 labell1" })
            <div class="col-md-10">

                <input type="Date" class="prashant">
                @*@Html.EditorFor(model => model.BirthDate, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger dg" })
            </div>
        </div>

        <div class="form-group login-page">
            @Html.LabelFor(model => model.UserAddress, htmlAttributes: new { @class = "control-label col-md-2 labell1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserAddress, new { htmlAttributes = new { @class = "form-control username1" } })
                @Html.ValidationMessageFor(model => model.UserAddress, "", new { @class = "text-danger dg" })
            </div>
        </div>


        <div class="form-group login-page">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 labell1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control username1" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger dg" })
            </div>
        </div>

        <div class="form-group login-btn">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Register"  class="btn btn-danger btnn btn-block" />
            </div>
        </div>
        <p class="Signup">
            Already have an account?
            @Html.ActionLink("Login", "Login", "Account")
        </p>
    </div>
    }
</body>
<script>
    function checkPhone(phone) {
        var phoneNum = /^\(?([0-9]{3})\)?[-. ]?([0-9]{3})[-. ]?([0-9]{4})$/;
        if (phone.match(phoneNum)) {
            return true;
        }
        else {
            return false;
        }
    }
</script>








